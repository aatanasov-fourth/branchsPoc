<div class="rota-day--overview">
  <div class="rota-day--row">
    {{moment day.shiftDate format="weekdayDay"}}
  </div>
  {{#if day.shifts}}
    <span class="rota-day--hours">
      &nbsp;{{svg-icon name="clock"}}
      {{#each day.shifts as |shift index|}}
        {{#if index}}<span>&amp;</span>{{/if}}
        {{shift.start}}-{{shift.end}}
      {{/each}}
    </span>
  {{/if}}
  {{#if day.hasDisplayableType}}
    <span class="rota-day--hours">
      {{#each day.displayTypes as |daytype index|}}
        {{#if index}}<span>&amp;</span>{{/if}}
        {{daytype}}
      {{/each}}
    </span>
  {{/if}}
</div>
{{rota-bar
  shifts=day.shifts
  empty=day.hasDisplayableType
  selectedShift=selectedShift
  selectTarget=selectTarget
  dayIndex=dayIndex
  isInPast=isInPast
}}
