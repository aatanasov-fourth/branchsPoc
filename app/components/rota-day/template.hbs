<div class="tool-tip--replace">
  <p>{{svg-icon name="clock"}} {{selectedShift.start}}-{{selectedShift.end}}</p>
  <p>{{svg-icon name="location"}} {{selectedShift.location}}</p>
  <p>{{svg-icon name="user"}} {{selectedShift.jobTitle}}</p>
</div>

<div class="rota-day--overview">
  <div class="rota-day--row">
    {{moment day.shiftDate format="ddd D"}}
  </div>
  {{#if day.shifts}}
    <span class="rota-day--hours">
      {{svg-icon name="clock"}}
      {{#each day.shifts as |shift index|}}
        {{#if index}}<span class="rota__split">&amp;</span>{{/if}}
        {{shift.start}}-{{shift.end}}
      {{/each}}
    </span>
  {{/if}}
  {{#if isNotRota}}
    <span class="rota-day--hours">
      {{day.type}}
    </span>
  {{/if}}
</div>
{{rota-bar
  shifts=day.shifts
  empty=isNotRota
  selectedShift=selectedShift
  selectTarget=selectTarget
}}
