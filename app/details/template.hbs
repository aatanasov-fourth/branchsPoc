      </dl>
      <dl class="tabular__row">
        <dt class="tabular__key">{{t 'details.employer.taxOfficeName'}}</dt>
        <dd class="tabular__value">{{attrs.employment.taxOfficeName}}</dd>
      </dl>
      <dl class="tabular__row">
        <dt class="tabular__key">{{t 'details.employer.taxOfficeNumber'}}</dt>
        <dd class="tabular__value">{{attrs.employment.taxOfficeNumber}}</dd>
      </dl>
      <dl class="tabular__row">
        <dt class="tabular__key">{{t 'details.employer.payeReference'}}</dt>
        <dd class="tabular__value">{{attrs.employment.payeReference}}</dd>
      </dl>
    </div>
  </div>

</div>