{{#with attrs.payslips as payslips }}
  {{#swipe-container
    collection=payslips
    tabPropertyKey="formattedProcessingDate"
    selectedIndex=attrs.selectedIndex
    isPanning=attrs.isPanning
    setSelectedIndex="setSelectedIndex"
  }}
    {{#each payslips as |payslip index|}}
      {{#swipe-item
        index=index
        selectedIndex=attrs.selectedIndex
      }}
        {{#flip-card height="388" breakpoint="640"}}

          {{#flip-card-front}}
            {{payslip-overview
              payslip=payslip
              index=index
              selectedIndex=attrs.selectedIndex
            }}
          {{/flip-card-front}}

          {{#flip-card-back}}
            {{payslip-detail
              payslip=payslip
              index=index
              selectedIndex=attrs.selectedIndex
            }}
          {{/flip-card-back}}

        {{/flip-card}}
      {{/swipe-item}}
    {{/each}}
  {{/swipe-container}}
  {{swipe-tabs
    collection=attrs.payslips
    selectedIndex=attrs.selectedIndex
    tabPropertyKey="formattedProcessingDate"
    setSelectedIndex="setSelectedIndex"
    cssNamespace="-payslip"
  }}
  <div class="payslip--breakdown">
    <h2>{{t 'payslips.historic'}}</h2>
    {{payslips-time-chart
      payslips=payslips selectedIndex=attrs.selectedIndex setSelectedIndex="setSelectedIndex"}}
  </div>
{{/with}}
