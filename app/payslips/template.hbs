{{#with attrs.lineitems as lineitems }}
  {{#swipe-container
    collection=lineitems
    tabPropertyKey="formattedProcessingDate"
    selectedIndex=attrs.selectedIndex
    setSelectedIndex="setSelectedIndex"
  }}
    {{#each lineitems as |lineitem index|}}
      {{payslip-card-item line=lineitem index=index selectedIndex=attrs.selectedIndex}}
    {{/each}}
  {{/swipe-container}}
  <div class="payslip__breakdown">
    <h2>{{t 'payslips.historic'}}</h2>
    {{payslips-time-chart
      payslips=attrs.lineitems selectedIndex=attrs.selectedIndex setSelectedIndex="setSelectedIndex"}}
  </div>
{{/with}}



