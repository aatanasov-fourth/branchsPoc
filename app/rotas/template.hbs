{{#swipe-container
   collection=attrs.rotaWeeks
   tabPropertyKey="formattedDateRange"
   selectedIndex=selectedIndex
   setSelectedIndex="setSelectedIndex"
}}
  {{#each attrs.rotaWeeks as |rotaWeek index|}}
    {{rota-week
       week=rotaWeek
       shifts=rotaWeek.shifts
       selectedShift=selectedShift
       selectedDayIndex=selectedDayIndex
       weekIndex=index
       selectedWeekIndex=selectedIndex
       selectTarget=this
    }}
  {{/each}}
{{/swipe-container}}
{{holiday-information info=attrs.holiday}}
